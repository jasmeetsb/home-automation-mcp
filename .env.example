# MCP Server Configuration
MCP_SERVER_PORT=8080
MCP_SERVER_HOST=0.0.0.0

# API Mode - Set to true to use real Google Nest API
USE_REAL_NEST_API=false

# API URLs
NEST_API_URL=http://localhost:8081
WEATHER_API_KEY=your_openweathermap_api_key

# GCP Configuration
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1

# Development
DEBUG=false
LOG_LEVEL=INFO

# Google Device Access / Nest API Configuration
GOOGLE_PROJECT_ID=your-device-access-project-id
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8090/auth/callback
GOOGLE_ACCESS_TOKEN=
GOOGLE_REFRESH_TOKEN=
